<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".burger.BuggerDaggerActivity">

    <TextView
        android:id="@+id/testText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        tools:text="햄벌거"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/testName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        tools:text="햄벌거"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/testText"/>
    <TextView
        android:id="@+id/testuName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        tools:text="햄벌거"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/testName"/>
    <TextView
        android:id="@+id/meta1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        tools:text="햄벌거"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/meta2"
        app:layout_constraintTop_toBottomOf="@+id/testuName"/>
    <TextView
        android:id="@+id/meta2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        tools:text="햄벌거"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/meta1"
        app:layout_constraintTop_toBottomOf="@+id/testuName"/>
</androidx.constraintlayout.widget.ConstraintLayout>